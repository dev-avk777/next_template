#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” TypeScript type checking..."
pnpm tsc --noEmit || exit 0

echo "ğŸ” Checking dependencies security..."
pnpm audit || echo "Security check completed with warnings"

echo "ğŸ” Checking bundle size..."
pnpm analyze || echo "Bundle analysis completed with warnings"

echo "ğŸ” Building project..."
pnpm run build || exit 1

echo "âœ… All checks passed successfully!"